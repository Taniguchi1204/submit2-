 <h1>Books</h1>
<table>
  <tr>
    <th>Title</th>
    <th>Body</th>
  </tr>
  <% @books = Book.all %>
  <% @books.each do |book| %>
  <tr>
    <td><%= book.title %></td>
    <td><%= book.body %></td>
    <td><%= link_to "Show", book_path(book) %></td>
    <td>|</td>
    <td><%= link_to "Edit", edit_book_path(book) %></td>
    <td>|</td>
    <td><%= link_to "Destroy", book_path(book), method: :delete,"data-confirm" => "Are you sureï¼Ÿ"%></td>
  </tr>
  <% end %>
</table>

